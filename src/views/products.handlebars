{{#if isValid}}
<div>
    {{#each docs}}
    <div>
        <p>Nombre: {{this.description}}</p>
        <p>Precio: {{this.price}}</p>
        <p>Categoría: {{this.category}}</p>
        {{!-- <p>Grupo: {{this.group}} &nbsp; Calificación: {{this.grade}}</p> --}}
    </div>
    <br />
    {{/each}}
</div>
<br />

<div>
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior </a>
            {{/if}}

            {{!-- numero de pagina --}}
            &nbsp;
            {{this.page}}
            &nbsp;

            {{#if hasNextPage}}
            <a href={{this.nextLink}}>
                Siguiente >> </a>
            {{/if}}

</div>
{{else}}
<h1>No hay productos</h1>
{{/if}}